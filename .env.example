# Araripe Deforestation Monitor — Environment Variables
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# ─── Copernicus Data Space (optional, for CDSE STAC access) ──────────────────
CDSE_USERNAME=
CDSE_PASSWORD=

# ─── NASA Earthdata (optional, for HLS data access) ──────────────────────────
EARTHDATA_USERNAME=
EARTHDATA_PASSWORD=

# ─── Cloudflare R2 (for COG storage, needed for upload script) ───────────────
R2_ENDPOINT_URL=https://<account-id>.r2.cloudflarestorage.com
R2_ACCESS_KEY=
R2_SECRET_KEY=

# ─── Planetary Computer (optional, increases rate limits) ────────────────────
PC_SDK_SUBSCRIPTION_KEY=
